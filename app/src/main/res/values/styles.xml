<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="Theme.MyApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here if needed -->
        <!-- e.g., <item name="colorPrimary">@color/my_custom_color</item> -->
    </style>

    <!-- Toolbar Title Text Appearance -->
    <style name="MyToolbarTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#002114</item>
    </style>

    <!-- Profile Item Container (Clickable Row) -->
    <style name="ProfileItemFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EDF2EC</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
        <item name= "android:topLeftRadius">10dp</item>
        <item name= "android:topRightRadius">10dp</item>
        <item name= "android:radius">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EDF2EC</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
        <item name= "android:topLeftRadius">10dp</item>
        <item name= "android:topRightRadius">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="ProfileItemLast">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EDF2EC</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
        <item name= "android:bottomLeftRadius">10dp</item>
        <item name= "android:bottomRightRadius">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <!-- Profile Text Style -->
    <style name="ProfileText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MaterialAlertDialog_Styled" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MaterialButton_Delete</item>
    </style>

    <style name="MaterialButton_Delete" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyCustomDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- A custom style for TextInputLayout (outlined or filled) -->
    <style name="Widget.MyApp.CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <!-- Corner radius, stroke color, etc. -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_200</item>
        <!-- etc. -->
    </style>

    <!-- A custom style for the EditText inside the layout -->
    <style name="Widget.MyApp.CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <!-- etc. -->
    </style>


</resources>
